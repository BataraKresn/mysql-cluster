{
  "dashboard": {
    "id": null,
    "title": "MySQL Cluster with ProxySQL Dashboard",
    "tags": ["mysql", "proxysql", "cluster"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "ProxySQL Connection Pool",
        "type": "graph",
        "targets": [
          {
            "expr": "mysql_global_status_threads_connected",
            "legendFormat": "Connections"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "MySQL Query Rate",
        "type": "graph", 
        "targets": [
          {
            "expr": "rate(mysql_global_status_queries[5m])",
            "legendFormat": "Queries/sec"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Replication Status",
        "type": "singlestat",
        "targets": [
          {
            "expr": "mysql_slave_seconds_behind_master",
            "legendFormat": "Lag (seconds)"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 9}
      },
      {
        "id": 4,
        "title": "ProxySQL Backend Status",
        "type": "table",
        "targets": [
          {
            "rawSql": "SELECT hostname, port, status, weight FROM mysql_servers",
            "format": "table"
          }
        ],
        "gridPos": {"h": 6, "w": 16, "x": 8, "y": 9}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
